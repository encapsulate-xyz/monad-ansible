[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ project }}
UMask=002
WorkingDirectory={{ execution_home_dir }}
EnvironmentFile={{ execution_general_environment_file_path }}
ExecStart={{ execution_bin_dir }}/{{ service_identifier }} \
    --chain monad_testnet2 \
    --db {{ triedb_path }} \
    --block_db {{ ledger_dir }} \
    --statesync {{ socket_dir }}/statesync.sock \
    --ro_sq_thread_cpu 5 \
    --sq_thread_cpu 6 \
    --log_level INFO
Restart=always
RestartSec=4
LimitNOFILE=1048576
DeviceAllow={{ triedb_path }} rw
# Hugemem configs below
LimitMEMLOCK=infinity
MemoryDenyWriteExecute=false
#SystemCallFilter=~@memlock
ProtectKernelModules=no
ProtectKernelLogs=no
MemoryMax=64G
StandardOutput=append:{{ execution_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
