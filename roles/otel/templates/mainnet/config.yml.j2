receivers:
  otlp/monad-mainnet:
    protocols:
      grpc:
        endpoint: '0.0.0.0:{{ otel.ports.grpc_port }}'
      http:
        endpoint: '0.0.0.0:{{ otel.ports.http_port }}'
exporters:
  otlp:
    endpoint: https://otel-external.monadinfra.com:443
  prometheus/monad:
    endpoint: '0.0.0.0:{{ otel.ports.prometheus_metrics_exporter_port }}'
    send_timestamps: true
    metric_expiration: 10m
    enable_open_metrics: true
    resource_to_telemetry_conversion:
      enabled: true
processors:
  batch:
  memory_limiter:
    limit_mib: 1500
    spike_limit_mib: 512
    check_interval: 5s
  resource:
    attributes:
    - key: secp_key
      value: "02f9eb1163e3d2ebde9f06fac83d8875e04997ce4711e44e63033fd7ad7a39581b"
      action: upsert

service:
  pipelines:
    metrics/monad-mainnet:
      receivers: [otlp/monad-mainnet]
      processors: [batch]
      exporters: [prometheus/monad]
    metrics:
      receivers: [otlp/monad-mainnet]
      exporters: [prometheus/monad,otlp]
      processors: [batch]
    traces:
      receivers: [otlp/monad-mainnet]
      processors: [batch]
      exporters: [otlp]
    logs:
      receivers: [otlp/monad-mainnet]
      processors: [batch]
      exporters: [otlp]
  telemetry:
    metrics:
      readers:
        - pull:
            exporter:
              prometheus:
                host: '0.0.0.0'
                port: {{ otel.ports.metrics_port }}
