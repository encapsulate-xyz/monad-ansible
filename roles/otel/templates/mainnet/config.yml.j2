receivers:
  otlp/monad-mainnet:
    protocols:
      grpc:
        endpoint: '0.0.0.0:{{ otel.ports.grpc_port }}'
      http:
        endpoint: '0.0.0.0:{{ otel.ports.http_port }}'
exporters:
  otlp:
    endpoint: https://otel-external.monadinfra.com:443
    timeout: 15s
    sending_queue:
      enabled: true
      queue_size: 5000
    retry_on_failure:
      enabled: true
      initial_interval: 5s
      max_interval: 30s
      max_elapsed_time: 10m
  prometheus/monad:
    endpoint: '0.0.0.0:{{ otel.ports.prometheus_metrics_exporter_port }}'
    send_timestamps: true
    metric_expiration: 180m
    enable_open_metrics: true
    resource_to_telemetry_conversion:
      enabled: true
processors:
  batch:
    send_batch_size: 1024
    send_batch_max_size: 2048
    timeout: 5s
  memory_limiter:
    limit_mib: 1500
    spike_limit_mib: 512
    check_interval: 5s
  resource:
    attributes:
    - key: secp_key
      value: "02f9eb1163e3d2ebde9f06fac83d8875e04997ce4711e44e63033fd7ad7a39581b"
      action: upsert

service:
  pipelines:
    metrics:
      receivers: [otlp/monad-mainnet]
      processors: [memory_limiter, resource, batch]
      exporters: [prometheus/monad, otlp]
