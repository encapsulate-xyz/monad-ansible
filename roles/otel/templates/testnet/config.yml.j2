receivers:
  otlp/monad-testnet:
    protocols:
      grpc:
        endpoint: '0.0.0.0:{{ otel.ports.grpc_port }}'
      http:
        endpoint: '0.0.0.0:{{ otel.ports.http_port }}'
exporters:
  otlp:
    endpoint: https://otel-external.monadinfra.com:443
    sending_queue:
      queue_size: 200000
    timeout: 30s
    retry_on_failure:
      enabled: true
  prometheus/monad:
    endpoint: '0.0.0.0:{{ otel.ports.prometheus_metrics_exporter_port }}'
    send_timestamps: true
    metric_expiration: 180m
    enable_open_metrics: true
    resource_to_telemetry_conversion:
      enabled: true
processors:
  batch:
    send_batch_size: 10000
    timeout: 5s
  memory_limiter:
    limit_mib: 1500
    spike_limit_mib: 512
    check_interval: 5s
  resource:
    attributes:
    - key: secp_key
      value: "03268b3d4c1fac09f737dbba157ec5992e794b8b7877ebeea6a2c4dd5a00ad53d0"
      action: upsert

service:
  pipelines:
    metrics/monad-testnet:
      receivers: [otlp/monad-testnet]
      processors: [batch]
      exporters: [prometheus/monad]
    metrics:
      receivers: [otlp/monad-testnet]
      exporters: [prometheus/monad,otlp]
      processors: [batch]
    traces:
      receivers: [otlp/monad-testnet]
      processors: [batch]
      exporters: [otlp]
    logs:
      receivers: [otlp/monad-testnet]
      processors: [batch]
      exporters: [otlp]
  telemetry:
    metrics:
      readers:
        - pull:
            exporter:
              prometheus:
                host: '0.0.0.0'
                port: {{ otel.ports.metrics_port }}
